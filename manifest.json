{
    "manifest_version": 2,

    "name": "Bulldog Facebook",
    "description": "Adds information about Yale students on your facebook.",
    "version": "0.1.2",
    
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": [
                "http://www.facebook.com/*",
                "https://www.facebook.com/*"
            ],
            "run_at": "document_start",
            "css": ["injection/fb.css"],
            "js": ["injection/jquery-2.1.4.min.js", "injection/facebook.js"]
        },
        {
            "matches": [
                "https://students.yale.edu/facebook/*"
            ],
            "css": ["injection/yalefb.css"],
            "js": ["injection/jquery-2.1.4.min.js", "injection/yalefb.js"]
        }
    ],

    "permissions": [
        "storage",
        "webNavigation"
    ]
}
